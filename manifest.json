{
  "manifest_version": 3,
  "name": "Focus-first-text-bar",
  "version": "1.0.0",
  "description": "Focus the first textarea that appears",
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png"
  },
  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["main.js"]
    }
  ]
}
